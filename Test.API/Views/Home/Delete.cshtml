<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/style.css" />
</head>
<body>
    <h4>Person List</h4>
    <hr />
    <table cellpadding="0" cellspacing="0">
        <tr>
            <th>ID</th>
            <th>FirstName</th>
            <th>MiddleName</th>
            <th>LastName</th>
            <th>PersonType</th>
        </tr>
        @foreach (Person person in Model)
        {
            <tr>
                <td>@person.BusinessEntityId</td>
                <td>@person.FirstName</td>
                <td>@person.MiddleName</td>
                <td>@person.LastName</td>
                <td>@person.PersonType</td>
                <td><button asp-page-handler="Delete" onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger btn-sm">Delete</button></td>

            </tr>

        }
    </table>
</body>
</html>